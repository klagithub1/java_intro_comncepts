<body>
	<h1>Group Application - Add a new Group</h1>
	
	<hr />
	<!-- Add User Panel -->
	<div id="CreateGroupBox" style="background-color:white;">
		<form action="GroupCreateController">
			<table id="newGroupTable">
				<tr>
					<td>Please fill in the group's information:</td>
				</tr>
				<tr>
					<td>Id: <input name="id"/></td>
				</tr>
				<tr>
					<td>Groupname: <input name="groupname"/></td>
				</tr>
				
				<tr>
					<td> <input type="submit" /></td>
				</tr>
			</table>
		</form>
		
